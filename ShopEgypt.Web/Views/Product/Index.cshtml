@model List<ProductReponseForAdmin>
@{
    ViewData["Title"] = "Index";
    ViewData["Head"] = "Product Management";
    ViewData["PageTitle"] = "Products";
    Layout = "_AdminLayout";
}
<!-- Navbar -->
<nav class="navbar navbar-dark fixed-top w-100 px-3">
    <button class="toggle-btn">☰</button>
    <a class="navbar-brand text-white" href="#">Admin Panel</a>
    <form class="d-flex ms-auto">
        <input id="search-term" class="form-control form-control-sm me-2 bg-dark-subtle" type="search" placeholder="Search">
        <button class="btn btn-outline-light btn-sm" type="submit">Search</button>
    </form>
</nav>

<div class="sidebar" id="sidebar">
    <a href="#products">🛒 Products</a>
    <a href="#categories">📂 Categories</a>
    <a href="#orders">📦 Orders</a>
    <a href="#users">👤 Users</a>
</div>
<!-- Main Content -->
<div class="content mt-5" id="main-content">
    <!-- Products Section -->
    <section id="products">
        <h3>Products</h3>
        <a asp-action="Create" asp-controller="Product" class="btn btn-primary text-dark bg-opacity-10 btn-sm mb-2" data-bs-toggle="tooltip" title="Add a new product">Add Product</a>
        <table class="table table-dark table-bordered table-hover shadow-sm rounded table-dark-mode">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Image</th>
                    <th>Has a Sale</th>
                    <th>Total Stock</th>
                    <th>Sold Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td class="text-center align-middle">@product.Name</td>
                        <td class="text-center align-middle">@product.Description</td>
                        <td class="text-center align-middle">@product.Price.ToString("C")</td>
                        <td class="text-center align-middle">@product.CategoryName</td>
                        <td class="text-center align-middle">
                            @if (product.ImageName != null)
                            {
                                <img src="~/Images/Products/@product.ImageName" width="100px" height="100px" style="border-radius:3px;" alt="Product Image" class="product-image" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                    </td>
                    <td class="text-center align-middle">
                        @Html.Raw(product.HasSale == true
                                                ? "<i class='bi bi-check-circle-fill text-success fs-3'></i>"
                                                : "<i class='bi bi-x-circle-fill text-danger fs-3'></i>")
                    </td>


                    <td class="text-center align-middle">@product.TotalStock</td>
                    <td class="text-center align-middle">@product.SoldCount</td>
                    <td class="text-center align-middle">
                        <div class="d-flex justify-content-center gap-2">
                            <a class="btn btn-success btn-sm"
                               asp-controller="Product"
                               asp-action="Edit"
                               asp-route-id="@product.Id">Edit</a>

                            <a href="#" class="btn btn-danger btn-sm delete-btn" data-product-id="@product.Id">Delete</a>
                        </div>
                    </td>
                </tr>
             }

            </tbody>
        </table>
    </section>
</div>


@section Scripts {
    @Html.AntiForgeryToken()
    <script src="~/products/delete.js"></script>
}