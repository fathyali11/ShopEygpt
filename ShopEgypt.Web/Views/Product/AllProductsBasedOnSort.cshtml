@model PaginatedList<DiscoverProductVM>

@{
    Layout = "_HomeLayout";
    ViewData["title"] = "All Products";
}

<section id="billboard" class="bg-light py-5">
    <div class="container">
        @if (Model == null || !Model.Items.Any())
        {
            <div class="row">
                <div class="col-12 text-center">
                    <h4 class="text-muted">No Products Here</h4>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model.Items)
                {
                    <div class="col-md-4 col-sm-6 mb-4 d-flex">
                        <div class="card shadow-sm w-100 h-100 border-0">
                            <div class="position-relative">
                                <a asp-action="Discover" asp-controller="Product" asp-route-id="@item.Id">
                                    <img src="~/Images/Products/@item.ImageName" alt="product" class="img-fluid">
                                </a>

                                <a href="#" class="btn btn-light toggle-wishlist position-absolute top-0 end-0 m-2 rounded-circle shadow-sm btn-wishlist
                                   @(item.IsInWishlist ? "text-danger" : "text-muted")"
                                   data-product-id="@item.Id"
                                   data-product-name="@item.Name"
                                   data-image-name="@item.ImageName"
                                   data-price="@item.Price"
                                   data-is-in-wishlist="@item.IsInWishlist"
                                   style="width: 40px; height: 40px;">
                                    @(
                                          item.IsInWishlist
                                          ? Html.Raw("<i class='bi wishlist-icon bi-heart-fill text-danger'></i>")
                                          : Html.Raw("<i class='bi wishlist-icon bi-heart'></i>")
                                     )
                                </a>

                            </div>

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-uppercase text-truncate" title="@item.Name">
                                    <a href="#" class="text-dark text-decoration-none">@item.Name</a>
                                </h5>
                                <p class="card-text text-muted text-truncate" title="@item.Description">@item.Description</p>

                                <div class="mt-auto">
                                    <a asp-action="Discover" asp-controller="Product" asp-route-id="@item.Id"
                                       class="btn btn-outline-dark btn-sm w-100 text-uppercase mb-2">
                                        Discover Now
                                    </a>

                                    <a href="#" class="text-decoration-none btn btn-primary btn-sm w-100 add-to-cart"
                                       data-product-id="@item.Id"
                                       data-product-name="@item.Name"
                                       data-image-name="@item.ImageName"
                                       data-price="@item.Price"
                                       data-count="1"
                                       data-after="Add to cart">
                                        <span>Add to Cart</span>
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- ✅ Pagination Section -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Product Pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="AllProductsBasedOnSort"
                               asp-route-pageNumber="@(Model.PageIndex - 1)"
                               asp-route-sortedBy="@ViewContext.HttpContext.Request.Query["sortedBy"]">Previous</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled"><span class="page-link">Previous</span></li>
                    }

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.PageIndex)
                        {
                            <li class="page-item active"><span class="page-link">@i</span></li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="AllProductsBasedOnSort"
                                   asp-route-pageNumber="@i"
                                   asp-route-sortedBy="@ViewContext.HttpContext.Request.Query["sortedBy"]">@i</a>
                            </li>
                        }
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-action="AllProductsBasedOnSort"
                               asp-route-pageNumber="@(Model.PageIndex + 1)"
                               asp-route-sortedBy="@ViewContext.HttpContext.Request.Query["sortedBy"]">Next</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled"><span class="page-link">Next</span></li>
                    }
                </ul>
            </nav>
        }

        <div class="btn-center">
            <a asp-action="Index" asp-controller="Home" class="btn btn-dark text-uppercase mt-3">Shop Collection</a>
        </div>
    </div>
</section>
