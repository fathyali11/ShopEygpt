@model PaginatedList<DiscoverProductVM>

@{
    Layout = "_HomeLayout";
    ViewData["title"] = "All Products";
}

<section id="billboard" class="bg-light py-5">
    <div class="container">
        @if (Model == null || !Model.Items.Any())
        {
            <div class="row">
                <div class="col-12 text-center">
                    <h4 class="text-muted">No Products Here</h4>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model.Items)
                {
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="banner-item image-zoom-effect">
                            <div class="image-holder">
                                <a asp-action="Discover" asp-controller="Product" asp-route-id="@item.Id">
                                    <img src="~/Images/Products/@item.ImageName" alt="product" class="img-fluid">
                                </a>
                            </div>
                            <div class="banner-content py-3">
                                <h5 class="element-title text-uppercase">
                                    <a href="#" class="item-anchor">@item.Name</a>
                                </h5>
                                <p>@item.Description</p>
                                <div class="btn-left">
                                    <a asp-action="Discover" asp-controller="Product" asp-route-id="@item.Id" class="btn-link fs-6 text-uppercase item-anchor text-decoration-none">Discover Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- ✅ Pagination Section -->
            @if (Model.TotalPages > 1)
            {
                <nav aria-label="Product Pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="AllProductsBasedOnSort"
                                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                                   asp-route-sortedBy="@ViewContext.HttpContext.Request.Query["sortedBy"]">Previous</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled"><span class="page-link">Previous</span></li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            if (i == Model.PageIndex)
                            {
                                <li class="page-item active"><span class="page-link">@i</span></li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="AllProductsBasedOnSort"
                                       asp-route-pageNumber="@i"
                                       asp-route-sortedBy="@ViewContext.HttpContext.Request.Query["sortedBy"]">@i</a>
                                </li>
                            }
                        }

                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="AllProductsBasedOnSort"
                                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                                   asp-route-sortedBy="@ViewContext.HttpContext.Request.Query["sortedBy"]">Next</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled"><span class="page-link">Next</span></li>
                        }
                    </ul>
                </nav>
            }

            <div class="btn-center">
                <a asp-action="Index" asp-controller="Home" class="btn btn-dark text-uppercase mt-3">Shop Collection</a>
            </div>
        }
    </div>
</section>
