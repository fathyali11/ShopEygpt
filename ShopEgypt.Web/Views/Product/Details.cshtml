@model ProductReponseForAdmin

@{
    ViewData["Title"] = "Product Details";
    Layout = "_AdminLayout";
}

<div class="container my-5 main-content" style="margin-left: 220px;">
    <div class="row my-5">
        <div class="col-12 text-center">
            <h2 class="mt-5">Details</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-5">

                <input asp-for="Id" hidden />

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea id="mytextarea" asp-for="Description" class="form-control" readonly></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" readonly />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="SoldCount" class="control-label"></label>
                    <input asp-for="SoldCount" class="form-control" readonly />
                    <span asp-validation-for="SoldCount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TotalStock" class="control-label"></label>
                    <input asp-for="TotalStock" class="form-control" readonly />
                    <span asp-validation-for="TotalStock" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" readonly />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <div class="form-group my-3 d-flex gap-2">
                    <a asp-action="Edit" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">← Back to List</a>
                </div>
        </div>

        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <img id="previewImage" src="~/Images/Products/@Model.ImageName" alt="@Model.ImageName" style="max-width: 100%; max-height:400px;" />
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/products/salesproperties.js"></script>

}