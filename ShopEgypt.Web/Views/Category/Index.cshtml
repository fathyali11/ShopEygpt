@model PaginatedList<Category>

@{
    ViewData["Title"] = "Index";
    ViewData["Head"] = "Category Management";
    ViewData["PageTitle"] = "Categories";
    Layout = "_AdminLayout";
}

<div class="content mt-5 main-content">
    <!-- Products Section -->
    <section id="products">
        <h3>Categories</h3>
        <a asp-action="Create" asp-controller="Category" class="btn btn-primary text-dark bg-opacity-10 btn-sm mb-2" data-bs-toggle="tooltip" title="Add a new product">Add Category</a>
        <table class="table table-dark table-bordered table-hover shadow-sm rounded table-dark-mode">
            <thead>
                <tr>
                    <th class="text-center align-middle">Name</th>
                    <th class="text-center align-middle">Created Date</th>
                    <th class="text-center align-middle">Updated Date</th>
                    <th class="text-center align-middle">Images</th>
                    <th class="text-center align-middle">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Items)
                {
                    <tr>
                        <td class="text-center align-middle">@category.Name</td>
                        <td class="text-center align-middle">@category.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="text-center align-middle">
                            @(category.UpdatedAt == null ? "Not updated" : category.UpdatedAt?.ToString("yyyy-MM-dd HH:mm"))
                        </td>
                        <td class="text-center align-middle">
                            @if (!string.IsNullOrEmpty(category.ImageName))
                            {
                                <img src="@category.ImageName" width="100px" height="100px" style="border-radius:3px;" alt="Product Image" class="product-image" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                        <td class="text-center align-middle">
                            <div class="d-flex justify-content-center gap-2">
                                <a class="btn btn-success btn-sm" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                                <a href="#" class="btn btn-danger btn-sm delete-btn" data-controller-name="Category" data-id="@category.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- ✅ Pagination Section -->
        @{
            var totalPages = Model.TotalPages;
            var currentPage = Model.PageIndex;

            int maxVisiblePages = 5;

            int startPage = Math.Max(1, currentPage - maxVisiblePages / 2);
            int endPage = Math.Min(totalPages, startPage + maxVisiblePages - 1);

            if (endPage - startPage + 1 < maxVisiblePages)
            {
                startPage = Math.Max(1, endPage - maxVisiblePages + 1);
            }
        }
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link page-link-ajax" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled"><span class="page-link">Previous</span></li>
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        if (i == Model.PageIndex)
                        {
                            <li class="page-item active"><span class="page-link">@i</span></li>
                        }
                        else
                        {
                            <li class="page-item">
                                <a class="page-link page-link-ajax" asp-action="Index" asp-route-pageNumber="@i">@i</a>
                            </li>
                        }
                    }

                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link page-link-ajax" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item disabled"><span class="page-link">Next</span></li>
                    }
                </ul>
            </nav>
        }

    </section>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script src="~/common/js/delete.js" asp-append-version="true"></script>

}
