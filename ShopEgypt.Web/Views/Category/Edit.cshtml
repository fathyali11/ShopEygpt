@model EditCategoryVM

@{
    ViewData["Title"] = "Edit";
    ViewData["Head"] = "Category Management";
    ViewData["PageTitle"] = "Edit";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Categoru</h4>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" hidden />
                    <input asp-for="ExistImageUrl" hidden />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Image" class="control-label">Upload Image</label>
                        <input asp-for="Image" type="file" class="form-control-file" id="imageFile" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-dark">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ExistImageUrl))
                {
                    <img id="previewImage" src="~/Images/Categories/@Model.ExistImageUrl" alt="Image Preview" style="max-width: 100%;" />
                }
                else
                {
                    <img id="previewImage" src="" alt="Image Preview" style="max-width:100%; max-height:400px; width:auto; height:auto; border:1px solid #ccc; box-shadow:0 2px 8px rgba(0,0,0,0.1);" />
                }
            </div>
        </div>
    </div>
</div>





@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/ImageDisplay.js"></script>
}

