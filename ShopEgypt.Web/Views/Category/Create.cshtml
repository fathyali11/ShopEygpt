@model CreateCategoryVM

@{
    ViewData["Title"] = "Create";
    ViewData["Head"] = "Category Management";
    ViewData["PageTitle"] = "Create";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Category</h4>
                <form class="forms-sample" enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input asp-for="Image" type="file" class="form-control" id="imageFile" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Create</button>
                    <a asp-action="Index" class="btn btn-dark">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <img id="previewImage" src="#" alt="Image Preview" style="max-width: 100%; display: none;" />
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/common/js/previewimage.js"></script>
}