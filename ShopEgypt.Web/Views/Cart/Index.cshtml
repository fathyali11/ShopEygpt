@model Cart
@{
    Layout = "_CartLayout";
}
<div class="card">
    <div class="row">
        <div class="col-md-8 cart">
            <div class="title">
                <div class="row">
                    <div class="col"><h4><b>Shopping Cart</b></h4></div>
                    <div class="col align-self-center text-right text-muted">@Model.CartItems.Count() items</div>
                </div>
            </div>
            @foreach(var item in Model.CartItems)
            {
                <div class="row border-top border-bottom">
                    <div class="row main align-items-center">
                        <div class="col-2"><img class="img-fluid" alt="product-img" src="~/Images/banner-image-1.jpg"></div>
                        <div class="col">
                            <div class="row text-muted">Shirt</div>
                            <div class="row">Cotton T-shirt</div>
                        </div>
                        <div class="col">
                            <a href="#" class="decrease-item text-decoration-none" data-item-id="@item.Id">-</a>
                            <a href="#" class="border item-count text-decoration-none">@item.Count</a>
                            <a href="#" class="increase-item text-decoration-none" data-item-id="@item.Id">+</a>
                        </div>

                        <div class="col">&euro; 44.00 <span class="close">&#10005;</span></div>
                        <div class="col"><i data-item-id ="@item.Id" class="bi bi-trash3-fill delete"></i></div>
                    </div>
                </div>

            }
       
            <div class="back-to-shop">
                <a href="#">&leftarrow;</a>
                <span class="text-muted">Back to shop</span>
            </div>
        </div>
        <div class="col-md-4 summary">
            <div><h5><b>Summary</b></h5></div>
            <hr>
            <div class="row">
                <div class="col" style="padding-left:0;">
                    ITEMS @Model.CartItems.Count()
                </div>

                <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                <div class="col">TOTAL PRICE</div>
                <div class="col text-right">&euro; 137.00</div>
            </div>
            <button class="btn">CHECKOUT</button>
        </div>
    </div>
    </div>
</div>
@section Scripts {
        <script src="~/carts/js/decrease.js"></script>
        <script src="~/carts/js/increase.js"></script>
        <script src="~/carts/js/delete.js"></script>
}
