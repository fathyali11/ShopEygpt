@model ResetPasswordVM

@{
    Layout = "_RegisterLayout";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-4 mx-auto">
                    <div class="card-body px-5 py-5">
                        <h3 class="card-title text-center mb-3 text-primary">
                            <i class="mdi mdi-lock-reset"></i> Reset Password
                        </h3>

                        <p class="text-center mb-4 text-muted">
                            Enter your new password to reset your account.
                        </p>

                        <form asp-action="ResetPassword" asp-controller="Auths" method="post">
                            
                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="Token" />

                            <div class="form-group">
                                <label asp-for="NewPassword"></label>
                                <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                            </div>

                            <div class="mt-3 text-center">
                                <a asp-action="Login" asp-controller="Auths" class="text-decoration-none">
                                    <i class="mdi mdi-arrow-left"></i> Back to Login
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
