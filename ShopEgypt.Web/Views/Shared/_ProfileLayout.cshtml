<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 60px;
        }

            .sidebar a,
            .sidebar form button {
                display: block;
                width: 100%;
                padding: 10px 20px;
                text-align: left;
                color: #fff;
                text-decoration: none;
                background: none;
                border: none;
                outline: none;
            }

                .sidebar a:hover,
                .sidebar a.active,
                .sidebar form button:hover {
                    background-color: #495057;
                    cursor: pointer;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
            flex-grow: 1;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center text-white mb-4">Profile</h4>
        <a class="active" asp-controller="Profile" asp-action="Index">Profile</a>
        <a asp-controller="Orders" asp-action="Current">Current Orders</a>
        <a asp-controller="Orders" asp-action="Last">Last Orders</a>

        <form asp-action="Logout" asp-controller="Auths" method="post">
            @Html.AntiForgeryToken()
            <button type="submit">Logout</button>
        </form>
    </div>

    <!-- Main Content -->
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
