@model WishlistResponse
@{
    Layout = "_CartLayout";
}
<div class="card">
    <div class="row">
        <div class="col-md-8 cart">
            <div class="title">
                <div class="row">
                    <div class="col"><h4><b>Wishlist</b></h4></div>
                    <div class="col align-self-center text-right text-muted">
                        @if (Model.Items.Any())
                        {
                            <span id="items-count">@Model.Items.Count() items</span>
                        }
                    </div>
                </div>
            </div>
            @if (Model.Items.Any())
            {
                @foreach (var item in Model.Items)
                {
                    <div class="row border-top border-bottom">
                        <div class="row main align-items-center">
                            <div class="col-2">
                                <img class="img-fluid" alt="product-img" src="@item.ImageName">
                            </div>
                            <div class="col">
                                <div class="row text-muted">Shirt</div>
                                <div class="row">Cotton T-shirt</div>
                            </div>
                            <div class="col">
                                &euro; @item.Price
                                <span class="close">&#10005;</span>
                            </div>
                            <div class="col">
                                <i data-product-id="@item.ProductId" data-wishlist-id="@Model.Id" class="bi bi-trash3-fill delete"></i>
                            </div>

                            <div class="col d-flex align-items-center">
                                <a href="#" class="text-decoration-none add-to-cart" data-after="Add to cart"
                                   data-product-id="@item.ProductId"
                                   data-product-name="@item.ProductName"
                                   data-image-name="@item.ImageName"
                                   data-price="@item.Price"
                                   data-count="1">
                                    <i class="bi bi-cart fs-5"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }

            }
            else
            {
                <div class="row">
                    <div class="col text-center">
                        <h5>Your cart is empty</h5>
                    </div>
                </div>
            }

            <div class="back-to-shop">
                <a asp-action="Index" asp-controller="Home">
                    <span class="text-muted">Back to shop</span>
                </a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Html.AntiForgeryToken()
    <script src="~/carts/js/addtocart.js" asp-append-version="true"></script>
    <script src="~/wishlists/js/deleteitem.js" asp-append-version="true"></script>
}
