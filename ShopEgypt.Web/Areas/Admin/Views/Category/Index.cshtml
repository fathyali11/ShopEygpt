@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    ViewData["Head"] = "Category Management";
    ViewData["PageTitle"] = "Categories";
}

<div>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Create</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Created Date
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.CreatedDate
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
