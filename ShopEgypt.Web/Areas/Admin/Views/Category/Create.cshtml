@model Category

@{
    ViewData["Title"] = "Create";
    ViewData["Head"] = "Category Management";
    ViewData["PageTitle"] = "Create";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CreatedDate" class="control-label"></label>
                            <input asp-for="CreatedDate" class="form-control" placeholder="Enter creation date" />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImageCover" class="control-label">Upload Image</label>
                    <input name="imageCover" type="file" class="form-control-file" id="imageFile" />
                        </div>

                        <!-- Image Preview -->
                        

                        <div class="form-group text-center">
                            <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
        </div>
        <div class="col-md-6">
            <div class="form-group text-center">
                <img id="previewImage" src="#" alt="Image Preview" style="max-width:150px; display:none;" />
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/category/categorydatatable.js"></script>
    <script src="~/js/deleteitems.js"></script>
    <script src="~/js/imagedisplay.js"></script>
}
