@model ShoppingCartVM

<section class="h-100 h-custom" style="background-color: #f9f9f9;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-start h-100">
            <div class="col-lg-10">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body p-4">
                        <h5 class="mb-3">
                            <a asp-action="Index" asp-controller="Home" asp-area="Customer" class="text-body text-decoration-none">
                                <i class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping
                            </a>
                        </h5>
                        <hr>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <p class="mb-1 fs-5">Shopping Cart</p>
                                <p class="mb-0 text-muted">You have <strong>@Model.ShoppingCarts.Count()</strong> items in your cart</p>
                            </div>
                        </div>

                        @foreach (var item in Model.ShoppingCarts)
                        {
                            <div class="card mb-3 border-0 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex flex-row align-items-center">
                                            <div class="me-3">
                                                <img src="/Images/Products/@item.Product.ImageName" alt="@item.Product.Name"
                                                     class="img-fluid rounded-3" style="width: 1000px; height: auto;">
                                            </div>
                                            <div class="ms-3">
                                                <h5 class="mb-1">@item.Product.Name</h5>
                                                <p class="small mb-0 text-muted">@Html.Raw(item.Product.Description)</p>
                                                <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Delete" asp-route-id="@item.ShoppingCartId" class="text-danger ms-3">
                                                <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-row align-items-center">
                                            <div class="d-flex align-items-center me-3">
                                                <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Minus" asp-route-id="@item.ShoppingCartId" class="text-dark me-2">
                                                    <i class="bi bi-dash-circle"></i>
                                                </a>
                                                <div class="text-center" style="width: 50px;">
                                                    <h5 class="fw-normal mb-0">@item.Count</h5>
                                                </div>
                                                <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Plus" asp-route-id="@item.ShoppingCartId" class="text-dark ms-2">
                                                    <i class="bi bi-plus-circle"></i>
                                                </a>
                                                
                                            </div>
                                            <div style="width: 100px;" class="text-end">
                                                <h5 class="mb-0">@String.Format("{0:C}", item.Product.Price)</h5>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="card mb-3">
                            <div class="card-body text-center">
                                <h5>Total Price: $@String.Format("{0:C}", Model.OrderHeader.TotalPrice)</h5>
                            </div>
                        </div>
                        @if(Model.ShoppingCarts.Count()!=0)
                        {
                            <div class="text-end">
                                <a class="btn btn-success" asp-area="Customer" asp-action="Summary">Proceed to Summary</a>
                            </div>
                        }
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <link href="~/css/shoppingcart/listcarts.css" rel="stylesheet" />
}
