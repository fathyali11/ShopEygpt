<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            overflow-x: hidden;
        }

        .sidebar {
            background-color: #343a40;
        }

            .sidebar a,
            .sidebar form button {
                display: block;
                width: 100%;
                padding: 10px 20px;
                text-align: left;
                color: #fff;
                text-decoration: none;
                background: none;
                border: none;
                outline: none;
            }

                .sidebar a:hover,
                .sidebar a.active,
                .sidebar form button:hover {
                    background-color: #495057;
                    cursor: pointer;
                }
    </style>
</head>
<body>
    <!-- Navbar toggle (menu button always visible) -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
                ☰ Menu
            </button>
            <span class="navbar-brand mb-0 h1 text-white">@ViewData["Title"]</span>
        </div>
    </nav>

    <!-- Sidebar as Offcanvas (opens by button) -->
    <div class="offcanvas offcanvas-start sidebar" tabindex="-1" id="sidebarMenu">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title text-white">Menu</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body p-0">
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
               asp-controller="Home" asp-action="Index">🏠 Home</a>

            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")"
               asp-controller="Users" asp-action="Profile">👤 Profile</a>

            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders"
                                                && ViewContext.RouteData.Values["action"]?.ToString() == "CurrentOrders" ? "active" : "")"
               asp-controller="Orders" asp-action="CurrentOrders">📦 Current Orders</a>

            <form asp-action="Logout" asp-controller="Auths" method="post">
                @Html.AntiForgeryToken()
                <button type="submit">🚪 Logout</button>
            </form>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content p-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
