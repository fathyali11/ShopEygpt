@model List<NewArrivalProductsVM>

@foreach (var product in Model)
{
    <div class="swiper-slide">
        <div class="product-item image-zoom-effect link-effect">
            <div class="image-holder position-relative">
                <a asp-action="Discover" asp-controller="Product" asp-route-id="@product.Id">
                    <img src="@product.ImageName" alt="product" class="product-image img-fluid">
                </a>
                <a href="#" class="btn-icon btn-wishlist toggle-wishlist"
                   data-product-id="@product.Id"
                   data-product-name="@product.Name"
                   data-image-name="@product.ImageName"
                   data-price="@product.Price">
                    @(
                        product.IsInWishlist
                        ? Html.Raw("<i class='bi wishlist-icon bi-heart-fill text-danger'></i>")
                        : Html.Raw("<i class='bi wishlist-icon bi-heart'></i>")
                     )

            </a>
                <div class="product-content">
                    <h5 class="element-title text-uppercase fs-5 mt-3">
                    <a asp-action="Discover" asp-controller="Product" asp-route-id="@product.Id">
                        @product.Name
                    </a>
                    </h5>
                    <a href="#" class="text-decoration-none add-to-cart" data-after="Add to cart"
                       data-product-id="@product.Id"
                       data-product-name="@product.Name"
                       data-image-name="@product.ImageName"
                       data-price="@product.Price"
                       data-count="1">
                        <span>$@product.Price</span>
                    </a>




                </div>
            </div>
        </div>
    </div>
}